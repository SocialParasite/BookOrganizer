<UserControl
    x:Class="BookOrganizer.UI.WPF.Views.AuthorDetailView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    d:DesignHeight="1050"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="ViewResources.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <ScrollViewer>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="50" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid>
                <Border
                    Margin="2"
                    HorizontalAlignment="Right"
                    BorderThickness="1">
                    <ToggleButton x:Name="EditModeActiveToggleButton" Style="{StaticResource ToggleButtonStyle}">
                        <TextBlock VerticalAlignment="Center" Text="Edit Mode" />
                    </ToggleButton>
                </Border>
            </Grid>

            <Grid Grid.Row="1" Margin="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Button
                    Grid.RowSpan="5"
                    MaxWidth="400"
                    MaxHeight="400"
                    Margin="0,0,50,0"
                    HorizontalAlignment="Left"
                    Command="{Binding AddAuthorPictureCommand}"
                    IsEnabled="{Binding UserMode.Item4}">
                    <Button.Template>
                        <ControlTemplate>
                            <Image x:Name="authorImage" Source="{Binding SelectedItem.MugShotPath}" />
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                <TextBox
                    x:Name="fullNameTextBox"
                    Grid.Column="1"
                    Grid.ColumnSpan="2"
                    BorderThickness="0"
                    FontSize="48"
                    FontWeight="Bold"
                    Style="{StaticResource TextBoxStyles}"
                    Visibility="{Binding UserMode.Item1, Converter={StaticResource BoolToVis}}">
                    <TextBox.Text>
                        <MultiBinding StringFormat="{}{1}, {0}">
                            <Binding Path="FirstName" />
                            <Binding Path="LastName" />
                        </MultiBinding>
                    </TextBox.Text>
                </TextBox>

                <Label
                    x:Name="lastNameLabel"
                    Grid.Column="1"
                    Content="Surname:"
                    FontWeight="Bold"
                    Style="{StaticResource LabelStyles}"
                    Visibility="{Binding UserMode.Item4, Converter={StaticResource BoolToVis}}" />
                <TextBox
                    x:Name="lastNameTextBox"
                    Grid.Column="2"
                    MinWidth="300"
                    MaxWidth="500"
                    Style="{StaticResource ValidationTextBoxStyle}"
                    Text="{Binding LastName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    TextWrapping="Wrap"
                    Visibility="{Binding UserMode.Item4, Converter={StaticResource BoolToVis}}" />
                <Label
                    x:Name="firstNameLabel"
                    Grid.Row="1"
                    Grid.Column="1"
                    Content="Forename(s):"
                    FontWeight="Bold"
                    Style="{StaticResource LabelStyles}"
                    Visibility="{Binding UserMode.Item4, Converter={StaticResource BoolToVis}}" />
                <TextBox
                    x:Name="firstNameTextBox"
                    Grid.Row="1"
                    Grid.Column="2"
                    MinWidth="300"
                    MaxWidth="500"
                    Style="{StaticResource ValidationTextBoxStyle}"
                    Text="{Binding FirstName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    TextWrapping="Wrap"
                    Visibility="{Binding UserMode.Item4, Converter={StaticResource BoolToVis}}" />
                <Label
                    x:Name="dobLabel"
                    Grid.Row="2"
                    Grid.Column="1"
                    Content="Date of Birth:"
                    FontWeight="Bold"
                    Style="{StaticResource LabelStyles}" />
                <Label
                    x:Name="dobLabelContent"
                    Grid.Row="2"
                    Grid.Column="2"
                    MinWidth="100"
                    MaxWidth="300"
                    Content="{Binding SelectedItem.DateOfBirth, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    ContentStringFormat="dd.MM.yyyy"
                    Style="{StaticResource LabelStyles}"
                    Visibility="{Binding UserMode.Item1, Converter={StaticResource BoolToVis}}" />
                <DatePicker
                    Grid.Row="2"
                    Grid.Column="2"
                    Height="50"
                    DisplayDateEnd="{x:Static sys:DateTime.Today}"
                    FontSize="24"
                    SelectedDate="{Binding SelectedItem.DateOfBirth, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    Visibility="{Binding UserMode.Item4, Converter={StaticResource BoolToVis}}" />
                <Label
                    x:Name="nationalityLabel"
                    Grid.Row="3"
                    Grid.Column="1"
                    Content="Nationality:"
                    FontWeight="Bold"
                    Style="{StaticResource LabelStyles}" />
                <TextBox
                    x:Name="nationalityTextBox"
                    Grid.Row="3"
                    Grid.Column="2"
                    MinWidth="100"
                    MaxWidth="300"
                    BorderThickness="0"
                    IsReadOnly="True"
                    Style="{StaticResource TextBoxStyles}"
                    Text="{Binding SelectedItem.Nationality.Name}"
                    Visibility="{Binding UserMode.Item1, Converter={StaticResource BoolToVis}}" />
                <ComboBox
                    x:Name="nationalityComboBox"
                    Grid.Row="3"
                    Grid.Column="2"
                    IsEditable="True"
                    IsTextSearchEnabled="True"
                    ItemsSource="{Binding Nationalities}"
                    SelectedItem="{Binding SelectedNationality, Mode=TwoWay}"
                    Style="{StaticResource ComboBoxStyles}"
                    TextSearch.TextPath="DisplayMember">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding DisplayMember}" />
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="SelectionChanged">
                            <i:InvokeCommandAction Command="{Binding NationalitySelectionChangedCommand}" />
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                </ComboBox>
            </Grid>

            <Grid Grid.Row="2">
                <GroupBox
                    x:Name="bioGroupBox"
                    Grid.Row="2"
                    Grid.ColumnSpan="2"
                    Width="600"
                    MaxHeight="600"
                    Margin="5"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Header="Biography">
                    <TextBox
                        x:Name="bioTextBlock"
                        VerticalContentAlignment="Top"
                        AcceptsReturn="True"
                        BorderThickness="0"
                        FontSize="16"
                        Style="{StaticResource EditableTextBoxStyles}"
                        Text="{Binding SelectedItem.Biography, UpdateSourceTrigger=PropertyChanged}"
                        TextWrapping="Wrap"
                        VerticalScrollBarVisibility="Auto" />
                </GroupBox>
            </Grid>

            <Grid Grid.Row="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" MaxWidth="{Binding UserMode.Item4, Converter={StaticResource BoolToMaxConverter}}" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <GroupBox
                    x:Name="bibliographyGroupBox"
                    Grid.Column="1"
                    Width="500"
                    MaxWidth="600"
                    MaxHeight="500"
                    Margin="5"
                    HorizontalAlignment="Left"
                    FontWeight="Bold"
                    Header="Bibliography:">
                    <ListBox
                        x:Name="bibliographyListBox"
                        HorizontalContentAlignment="Stretch"
                        BorderThickness="0"
                        ItemsSource="{Binding SelectedItem.BooksLink}">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel>
                                    <Label>
                                        <Label.Content>
                                            <Grid MaxWidth="550">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="50" />
                                                    <ColumnDefinition Width="*" />
                                                </Grid.ColumnDefinitions>
                                                <Image
                                                    x:Name="bookCoverImage"
                                                    MaxWidth="75"
                                                    MaxHeight="75"
                                                    Source="{Binding Book.BookCoverPicturePath}" />
                                                <TextBlock
                                                    x:Name="basicLabelTextBlock"
                                                    Grid.Column="1"
                                                    Margin="20,0,0,0"
                                                    Text="{Binding Book.Title}"
                                                    TextWrapping="Wrap">
                                                    <TextBlock.InputBindings>
                                                        <MouseBinding
                                                            Command="{Binding DataContext.ShowSelectedBookCommand, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type ListBox}}}"
                                                            CommandParameter="{Binding Book.Id}"
                                                            MouseAction="LeftDoubleClick" />
                                                    </TextBlock.InputBindings>
                                                </TextBlock>
                                            </Grid>
                                        </Label.Content>
                                    </Label>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </GroupBox>
            </Grid>

            <Grid Grid.Row="4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="150" />
                    <ColumnDefinition Width="150" />
                </Grid.ColumnDefinitions>
                <Button
                    x:Name="SaveAuthorDetailsButton"
                    Grid.Column="1"
                    Margin="50,0,0,0"
                    HorizontalAlignment="Left"
                    Command="{Binding SaveItemCommand}"
                    Content="Save"
                    Style="{StaticResource UpdateButtonStyle}" />
                <Button
                    x:Name="DeleteAuthorButton"
                    Grid.Column="2"
                    Margin="50,0,0,0"
                    HorizontalAlignment="Left"
                    Command="{Binding DeleteItemCommand}"
                    Content="Delete"
                    Style="{StaticResource UpdateButtonStyle}" />
            </Grid>
        </Grid>
    </ScrollViewer>
</UserControl>
